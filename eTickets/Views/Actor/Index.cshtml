@model IEnumerable<Actor>

@{
	ViewData["Title"] = "Actors List";
}


<div>
	<h1> Actors</h1>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(x => x.ProfilePictureURL)
				</th>
				<th>
					@Html.DisplayNameFor(x => x.FullName)
				</th>
				<th>
					@Html.DisplayNameFor(x => x.Bio)
				</th>
				<th>
					Actions
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var item in Model)
			{
				<tr>
					<td class="align-middle">
						<img class="rounded-circle" src="@item.ProfilePictureURL" style="max-width: 150px" />
					</td>
					<td class="align-middle">
						@Html.DisplayFor(modelItem => item.FullName)
					</td>
					<td class="align-middle">
						@Html.DisplayFor(modelItem => item.Bio)
					</td>
					<td class="align-middle">
						<a class="btn btn-outline-primary" asp-action="Edit" asp-controller="Actor" asp-route-id="@item.Id"><i class="bi bi-pencil-square">Edit</i></a>
						<a class="btn btn-outline-info" asp-action="Details" asp-controller="Actor" asp-route-id="@item.Id"><i class="bi bi-eye">Details</i></a>
						<a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Actor" asp-route-id="@item.Id"><i class="bi bi-pencil-square">Delete</i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

<hr />
<a asp-action="Index" asp-controller="Movie">Back to Home</a>
<hr />
<a asp-controller="Actor" asp-action="Create"  class="btn btn-success"> <i class="bi bi-plus-circle"></i> Create Actor</a>
