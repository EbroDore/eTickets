@model IEnumerable<Cinema>
@{
	ViewData["Title"] = "Cinema List";
}



<figure class="text-center">
	<blockquote class="blockquote">
		<h3>Cinemas</h3>
	</blockquote>
	<figcaption class="blockquote-footer">
		<p>Eat Food, Watch Movie,  <cite title="Good Time">Good Time</cite></p>
	</figcaption>
</figure>



<table class="table table-bordered">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(x => x.Logo)
			</th>
			<th>
				@Html.DisplayNameFor(x => x.Name)
			</th>
			<th>
				@Html.DisplayNameFor(x => x.Description)
			</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			@foreach(var item in Model)
			{
				<tr>
				<td>
					<img class="rounded-circle" src="@item.Logo" style="max-width: 150px" />
				</td>
				<td>@Html.DisplayFor(modelItem => item.Name)</td>
				<td>@Html.DisplayFor(modelItem => item.Description)</td>
				<td class="align-middle">
						<a class="btn btn-outline-primary" asp-action="Edit" asp-controller="Cinema" asp-route-id="@item.Id"><i class="bi bi-pencil-square">Edit</i></a>
						<a class="btn btn-outline-info" asp-action="Details" asp-controller="Cinema" asp-route-id="@item.Id"><i class="bi bi-eye">Details</i></a>
						<a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Cinema" asp-route-id="@item.Id"><i class="bi bi-pencil-square">Delete</i></a>
					</td>
				</tr>
			}
		</tr>
	</tbody>
</table>










<hr />

<a asp-action="Index" asp-controller="Home">Back to Home</a>

@await Html.PartialAsync("_CreateItem", "Cinema")